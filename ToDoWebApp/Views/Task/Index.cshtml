@model ToDoTaskViewModel

<h2>Task assigned to choosen List</h2>

<p>
    <a asp-action="CreateTask" asp-route-listid="@Model.ListId">Create new Task</a>
</p>
<p>
    <a asp-action="Index" asp-controller="Task" asp-route-completed="false" asp-route-page="1" >Show completed tasks</a>
    <a asp-action="Index" asp-controller="Task" asp-route-completed="true" asp-route-page="1" >Hide completed tasks</a>
</p>

@foreach (var t in Model.Tasks)
{
    <partial name="TaskSummary" model="t" />
}
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
page-class="btn" page-class-normal="btn-outline-dark"
page-class-selected="btn-primary" page-urllistid="@Model.ListId" page-urlcompleted="@Model.Completed" class="btn-group pull-right m-1">
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}