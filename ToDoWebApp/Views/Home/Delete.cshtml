@model ToDoList

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete List</h1>

<h3>Are you sure that you want to delete this List?</h3>
<div>
    <hr />
    <div class="bg-faded p-1">
        <h4>List ID:  <mark>@Model.Id</mark></h4>
        <h4>List Name:  <mark>@Model.Name</mark></h4>
        <h4>List completition status:  <mark>@Model.IsCompleted</mark></h4>
        <h4>Is hidden List:  <mark>@Model.IsHidden</mark></h4>
        <h4>Is important List:  <mark>@Model.IsImportant</mark></h4>
        <h4>Number of tasks assigned to this list: <mark>@ViewBag.AssignedTasksCount</mark></h4>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index">Back to Lists</a>
    </form>
</div>